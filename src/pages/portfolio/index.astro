---
import BaseLayouts from "@/layouts/BaseLayouts.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Project from "@/components/Project.astro";
import { Image } from "astro:assets";
import ariannapesce from "@/assets/ariannapesce.webp";

const title = "Arianna Pesce | Portfolio";
const description =
  "Welcome to my personal portfolio website, know more about m and my works.";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<style lang="scss">
  .hero {
  width: 100%;
  min-height: 90vh;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  background: var(--bg-color); // il tuo colore di sfondo
  box-shadow: inset 0 -3em 1em -1em rgba(0, 0, 0, 0.8);
  overflow: hidden;

  .hero-container {
    width: 90%;
    display: flex;
    flex-direction: column; // Mette gli elementi uno sotto l'altro
    align-items: center;   // Li centra orizzontalmente
    position: relative;

    h1 {
      font-size: clamp(4rem, 18vw, 13rem); // Fluido tra mobile e desktop
      margin: 0;
      line-height: 0.9;
      color: var(--fo-color);
      text-align: center;
      transform: scaleY(1.8); 
      z-index: 1; // Sta dietro
      text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.904);
    }

    .personal-foto {
      z-index: 2; // Sta sopra
      /* IL TRUCCO: Un margine negativo sposta la foto verso l'alto */
      margin-top: -5%; 
      
      .foto-me {
        display: block;
        height: auto;
        /* Regola la larghezza o l'altezza massima per il responsive */
        width: 100%;
        max-width: 500px; 
        
        @media (max-width: 500px) {
          max-width: 300px;
        }
      }
    }
  }
}
</style>

<BaseLayouts title={title} description={description}>
  <Header />
  <main>
    <div class="hero">

      <div class="hero-container">

        <h1>PORT FOLIO</h1>

        <div class="personal-foto">

          <Image

            class="foto-me"

            src={ariannapesce}

            alt="arianna pesce"

            transition:name="herome"

          />

        </div>

      </div>

    </div>

    <div class="list-works">
      {projects.map((entry) => <Project project={entry} />)}
    </div>
  </main>

  <Footer />
</BaseLayouts>
