---
import BaseLayouts from "@/layouts/BaseLayouts.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Project from "@/components/Project.astro";
import { Image } from "astro:assets";
import ariannapesce from "@/assets/ariannapesce.webp";


const title = "Arianna Pesce | Portfolio";
const description =
  "Welcome to my personal portfolio website, know more about m and my works.";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<style lang="scss">

  .hero {
    width: 100%;
    height: 90vh;
    box-shadow: inset 0 -3em 1em -1em rgba(0, 0, 0, 0.8);

    .hero-container {
      position: relative;
      height: 100%;

      h1 {
        font-size: 13rem;
        transform: scaleY(2.2);
        position: absolute;
        color: var(--fo-color);
        inset: 0;
        margin: auto;
        top: 25%;
        text-align: center;

        letter-spacing: 7px;
        text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.904);
z-index: -5;
        /* -webkit-text-stroke-width: 3px;
  -webkit-text-stroke-color: black; */
      }
      .personal-foto {
        height: 450px;
        width: auto;
       position: absolute;

          bottom: 0;
          right: 53%;
          transform: translateX(50%);

        .foto-me {
          
          max-height: 450px;
          width: auto;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }
    }
  }

  .list-works {
    margin: 0 8rem;
  }
  /* @media screen and (min-width: 1024px) {
  } */


</style>

<BaseLayouts title={title} description={description}>
  <Header />
  <main>
    <div class="hero">
      <div class="hero-container">
        <h1>PORT FOLIO</h1>
        <div class="personal-foto">
          <Image class="foto-me" src={ariannapesce} alt="arianna pesce" transition:name="herome"/>
        </div>
      </div>
    </div>

    <div class="list-works">
      {projects.map((entry) => <Project project={entry} />)}
    </div>
  </main>

  <Footer />
</BaseLayouts>
