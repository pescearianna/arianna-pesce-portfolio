---
import BaseLayouts from "@/layouts/BaseLayouts.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Project from "@/components/Project.astro";
import { Image } from "astro:assets";
import ariannapesce from "@/assets/ariannapesce.png";
import flower from "@/assets/flower.png";

const title = "Arianna Pesce | Portfolio";
const description =
  "Welcome to my personal portfolio website, know more about m and my works.";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<style lang="scss">
  .hero {
  width: 100%;
  min-height: 85vh;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  
  box-shadow: inset 0 -3em 1em -1em rgba(0, 0, 0, 0.8);
  overflow: hidden;

  .hero-container {
    width: 90%;
    display: flex;
    flex-direction: column; // Mette gli elementi uno sotto l'altro
    align-items: center;   // Li centra orizzontalmente
    position: relative;

    h1 {
      font-style: normal;
      
      font-size: clamp(3rem, 15vw, 13rem); // Fluido tra mobile e desktop
      margin: 0;
      line-height: 0.9;
      // background: radial-gradient(circle, var(--fi-color) 0%, var(--fo-color) 40%, var(--fi-color) 50%,var(--fo-color) 50%,var(--fo-color) 60%, var(--fi-color) 80%,var(--fo-color) 90%);
        background-image: radial-gradient(
     farthest-corner at 50% 100%,
     var(--fi-color) 20%,
     var(--fo-color) 40%,
     var(--fo-color) 85%,
      var(--fi-color) 97%,
   );
      background-clip: text;
color: transparent;
text-shadow: none;
      text-align: center;
      transform: scaleY(1.8); 
      z-index: 1; // Sta dietro
      // text-shadow: 0px 2px 2px rgba(247, 247, 247, 0.904);
      margin-top:7rem;
    }

    .flower{
      position: absolute;
      bottom:0;  
      right:0;
      width: clamp(200px, 40vw, 375px);
      height: auto;
      z-index: -5;
    
      // .flower-foto{
      //  width: 100%;
      // height: auto;
      // }
    }


.flower-sx{
 position: absolute;
      bottom:0;  
      left:0;
      width: clamp(200px, 40vw, 375px);
      height: auto;
     
       transform: scaleX(-1);
       transform-origin: center center;
      z-index: -5;
    }

    .personal-foto {
      z-index: 2; // Sta sopra
      /* IL TRUCCO: Un margine negativo sposta la foto verso l'alto */
      margin-top: -5%; 
      @media screen and (min-width: 500px){margin-right: 5rem;}
      
      .foto-me {
        display: block;
        height: auto;
        /* Regola la larghezza o l'altezza massima per il responsive */
        width: 100%;
        max-width: 300px; 
        
        @media (max-width: 500px) {
          max-width: 300px;
        }
      }
    }
  }
}

.list-works{
  // margin: 1rem;
  // @media screen and (min-width:500px ) {
  //    margin: 1rem 3rem;
  // }
  // @media screen and (min-width:1000px ) {
  //    margin: 1rem 8rem;
  // }
  margin: auto;
  width: clamp(80%, 1200px, 85%);
  
}
</style>

<BaseLayouts title={title} description={description}>
  <Header />
  <main>
    <div class="hero">

      <div class="hero-container">

        <h1>PORT FOLIO</h1>
<span class="flower"><Image class="flower-foto" alt="" src={flower}/></span>
<span class="flower-sx"><Image class="flower-foto" alt="" src={flower}/></span>
        <div class="personal-foto">

          <Image

            class="foto-me"

            src={ariannapesce}

            alt="arianna pesce"

            transition:name="herome"

          />

        </div>

      </div>

    </div>

    <div class="list-works">
      {projects.map((entry) => <Project project={entry} />)}
    </div>
  </main>

  <Footer />
</BaseLayouts>
