  /* MAIN */

 
  
.space{ 
    margin: 0 1.5rem;
}
  main {
  

    .cv-sec {
     
      
      margin-top: 3rem;
      /* align-content: center; */
      color: var(--text-color);
      .num {
        font-weight: 400;
        font-size: 2rem;
        margin-bottom: 0;
      }
      h2 {
        font-weight: 600;
        font-size: 3rem;
