        margin-bottom: 0.5rem;
        /* :hover{
        text-decoration: underline;
        text-decoration-color: var(--fo-color);
      } */
      }
    }

    .autoShow {
      animation: text-appear both;
      animation-timeline: view();
      animation-range: entry 20% cover 100vh;
    }
  }

  @keyframes text-appear {
    from {
      opacity: 0;
      transform: translateY(200px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 481px){
    .space {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;
  }
  main{
    .cv-sec{
      min-height: 80vh;
    }
  }
} 
</style>

<BaseLayouts title={title} description={description} >
  <Header />
  
  <main class="scroll-container" >
    <Hero class="scroll-section" />

    <!-- ///   ABOUTME    /// -->

    <section class="cv-sec autoShow space scroll-section">
      <p class="num">01 /</p>
      <h2>About Me</h2>
      <AboutMeResume />
    </section>

    <!-- ///   SKILLS    /// -->
    <section class="cv-sec autoShow space scroll-section">
      <p class="num">02 /</p>
      <h2>Skills</h2>
      <SkillResume />
      </section>

      <!-- ///   LATEST PROJECT    /// -->
      <section class="cv-sec autoShow space scroll-section">
        <p class="num">03 /</p>
        
        <FinalHome />
      </section>
   
   
    <Footer />
  </main>
</BaseLayouts>
