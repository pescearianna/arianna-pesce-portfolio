---
import { Image } from "astro:assets";
import ariannapesce from "@/assets/ariannapesce.webp";
import Button from "@/components/Button.astro";
---
<style>
    .hero {
    width: 100%;
    height: 90vh;
    background-color: var(--bg-color);
    display: flex;
    position: relative;
    .hero-foto {
      width: 49%;
      height: 100%;
      position: relative;
      .tube {
        background-color: var(--fo-color);
        height: 550px;
        width: 400px;
        position: absolute;
        right: 15%;
        bottom: 0;
        border-radius: 50% 45% 5% 15%;
      }
      .foto-me {
        max-height: 525px;
        width: auto;
        float: left;
        position: absolute;
        bottom: 0;
        left: 60%;
        transform: translateX(-50%);
        filter: drop-shadow(-10px -2px 3px rgba(22, 22, 22, 0.5));
      }
    }

    .hero-text {
      color: var(--text-color);
      width: 49%;
      height: 600px;
      padding: 10rem 16rem 10rem 0;
      float: right;
      font-size: 1.5rem;
      h1 {
        display: inline-block;
      }
      p {
        .different {
          color: var(--th-color);
          font-weight: bold;
        }
      }
      #cta {
        margin: 1rem 0;
      }
      
    }
  }

</style>

<div class="hero">
    <div class="hero-foto">
      <div class="tube"></div>
      <Image
        transition:name="herome"
        class="foto-me"
        src={ariannapesce}
        alt="arianna pesce"
      />
    </div>
    <div class="hero-text">
      <p>&#128075; Hi there! I'm</p>
      <h1>Arianna Pesce</h1>
      <p>
        A <span class="different">Front-End Developer</span> with a strong passion
        for UX/UI Design.
      </p>
      <br>
      <p> Have already a good idea for a project?</p>
      <p id="cta">Let's talk together! &#10024;</p>

      <Button text="Send a message" />
    </div>
  </div>